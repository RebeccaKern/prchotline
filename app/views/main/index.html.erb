<p id="notice"><%= notice %></p>


<% if @locations.blank? %>
  <h4> No item available.</h4>
<% else %>
  <h1><%= @item.name %></h1>
  <table border= "1px solid black">

    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Zipcode</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @locations.each do |loc| %>
        <tr>
          <td><%= loc.name %></td>
          <td><%= loc.address %></td>
          <td><%= loc.zipcode %></td>

        </tr>
      <% end %>
    </tbody>

  </table>


<% end %>
<br>

<%= link_to 'New Item', new_item_path %>
