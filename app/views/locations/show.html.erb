<div class="large-8 large-centered columns">
  <div class="panel callout radius">
<h3><%= @location.name %></h3>

<p>
  <strong>Addresses:</strong>
  <% @addresses = @location.addresses %>
  <ol>
    <% @addresses.each do |a| %>
      <li><%= link_to a.full_address, "http://maps.google.com/?q=#{a.full_address}", target: :_blank %> <br></br></li>
    <%end%>
  </ol>
</p>

<p>
  <strong>Phone:</strong>
  <%= number_to_phone(@location.phone, area_code: true) %>
</p>

<p>
  <strong>Website:</strong>
  <%= link_to @location.website, "#{@location.website}", target: :_blank %>
</p>


<p>
  <strong>Active:</strong>
  <%= @location.active ? "Yes" : "No" %>
</p>

 <p>
  <b>Items:</b>
    <ul>
      <% for il in @item_locations %>
        <li><%= il.item.name %> </li>
      <% end %>
    </ul>
  </p>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>

</div>
</div>
