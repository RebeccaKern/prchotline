<p id="notice"><%= notice %></p>

<h1>Items</h1>



<div class="row">
<div class="large-12 columns">
<div class="panel">
<%= link_to 'New Item', new_item_path %>
<% if @items.blank? %>
  <h4> No item available.</h4>
<% else %>
  <table border= "1px solid black">

    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
<% end %>
<br>

</div></div></div>
