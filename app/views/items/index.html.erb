<p id="notice"><%= notice %></p>

<h1>Items</h1>

<div class="row">
<div class="large-12 columns">
<div class="panel">
<% if @items.blank? %>
  <h4> No item available.</h4>
<% else %>
  <table border= "1px solid black">

    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Active</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= item.active %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
<% end %>
<br>
<%= link_to 'New Item', new_item_path %>

</div></div></div>

<%= will_paginate @items, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
