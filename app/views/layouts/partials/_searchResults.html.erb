<div class="column expanded row" style="width: 60%">
  <div class="callout"  align = 'center'>

    <h2><%= @item.name.capitalize %> in <%= @county.name %> County</h2>

    <% st = "" %>
    <% @item.aliases.each do |a| %>
      <% st += " " + a.name %>
    <% end %>
    <h6>Also known as: <%= st  %> </h6>
    <br>

    <div class="large-7 columns"  align = 'left'>
        <h4><%= @item.name.capitalize %></h4>

        <p><%= @item.name %> is very useful and can be recycled. </p>
    </div>

    <div class="large-5 columns"  align = 'left'>

        <h4><%= @county.name %> County</h4>
        <p><%= @county.name %> can recycle <%= @item.name %>
        <br> <br>

          County Coordinator: <br>
          <% if @county.coordinator  %>
            <%= @county.coordinator  %><br>
          <% else %>
            <%= "There is no county coordinator." %><br>
          <% end %>
          <% if @county.phone %>
            <%= @county.phone%><br>
          <% else %>
            <%= "There is no county phone number." %><br>
          <% end %>
          <% link = @county.website%>
          <% if link != nil %>
            <%= link_to "County Recycling Website", "#{link}", :target => "_blank" %>
          <% else %>
            <%= "There is no county website." %>
          <% end %>

        </p>

    </div>

    <br>

    <div align = 'center'>

    <%if @locations.size > 0 %>

      <table border= "1px solid black" >

        <thead>
          <tr>


            <th><%= button_to "Name", search_path, method: :get, params: { :county => params[:county], :item => params[:item], :zip => params[:zip], :sortby => "name" }%></th>
            <th>
              Address <%= button_to "by Zip Code", search_path, method: :get, params: { :county => params[:county], :item => params[:item], :zip => params[:zip], :sortby => "zipcode" }%>
            </th>
            <th>Website</th>
            <th>Phone</th>
            <th><%= button_to "Verified", search_path, method: :get, params: { :county => params[:county], :item => params[:item], :zip => params[:zip], :sortby => "verified" }%></th>
            <th>Context </th>


          </tr>
        </thead>

        <tbody>
          <% @locations.each_with_index do |addr, index| %>
          <tr>
            <% location = Location.find(addr.location_id) %>
            <td><%= link_to location.name, location%> </td>

            <td><%= link_to addr.full_address, "http://maps.google.com/?q=#{addr.full_address}" %>  </td>
            <td><%= location.website %></td>
            <td>
              <% ph = location.phone %>
              <% a = location.phone.gsub!(/\D/, "") %>
              <%= "(#{ph[0..2]})" %>&nbsp;<%="#{ph[3..5]}"%>&nbsp;<%="#{ph[6..-1]}"%>
            </td>

            <td>
              <% if (Time.new.to_date - location.updated_at.to_date).to_i < 0%>

                0 days ago
             <% else %>
                  <%= (Time.new.to_date - location.updated_at.to_date).to_i %> days ago
             <% end %>
            </td>

            <td> </td>


          </tr>
          <% end %>
        </tbody>

      </table>
    <% else %>
      <%= "There are no active locations where this item can be recycled." %>
    <% end %>
    </div>



    </div>

</div>

<% if @locations != [] %>
        <%= will_paginate @locations, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
<% end %>
