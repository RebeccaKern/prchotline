<script>
     $( function() {
       $( "#counties" ).autocomplete({
         source: '<%= counties_path(:json) %>'
       });
       $( "#items" ).autocomplete({
         source: '<%= items_path(:json) %>'
       });
     } );
</script>

<div class="top-bar" data-topbar role="navigation">
  <ul class="dropdown menu" data-dropdown-menu>

      <li class="name"><h4><%= link_to "PRC Hotline", search_path, class: "active" %></h4></li>

      <li><%= link_to "Locations", locations_path, class: "active" %></li>
      <li><%= link_to "Validations", validations_path, class: "active" %></li>
  </ul>
  <div class="top-bar-right">
        <%= form_tag("/search", :method => "get", id: "search-form") do %>
            <div class="row">
              <div class="medium-3 columns">
                <%= text_field_tag :item, params[:item], :placeholder => 'Enter Item', id:'items' %>
              </div>
              <div class="medium-3 columns">
                    <%= text_field_tag :county, params[:county], :placeholder => 'Enter County', id:'counties' %>
              </div>

              <div class="medium-3 columns">
                <%= text_field_tag :zip, params[:zip], placeholder: "Zipcodes", maxlength: 5, class: 'input-small'%>
              </div>

              <div class="medium-3 columns">
                <%= submit_tag "Search", :name => nil %>
              </div>

            </div>
        <% end %>
      </div>
    </ul>
  </div>
