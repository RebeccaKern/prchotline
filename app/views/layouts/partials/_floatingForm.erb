          PRC Call
          <%= check_box_tag :prcCall, if @vals.blank? then "Yes" elsif @vals[6].nil? then "No" end  %>

          DEP Call
          <%= check_box_tag :depCall, if @vals.blank? then "Yes" elsif @vals[7].nil? then "No" end %>

          <br>
          <%= submit_tag "Submit", name: 'submit_clicked' %>
          <%= submit_tag "Save" %>
      <% end %>
