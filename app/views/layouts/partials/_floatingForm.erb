      
      <%= form_tag("/submit_form", method: "post") do %>

      County
      <%= select_tag 'county', options_for_select(County.all.alphabetical.map { |a| [a.name, a.id]}),
      value: if @vals.blank? then County.all.first elsif @vals[0].nil? then @vals[0] end , :required => true %>

      Item
      <%= select_tag 'item', options_for_select(Item.all.alphabetical.map { |a| [a.name.capitalize, a.id]}),
      value: if @vals.blank? then Item.all.first elsif @vals[1].nil? then @vals[1] end , :required => true %>

      Caller Name
      <% caller_name = if @vals.blank? then nil else @vals[2] end%>
      <%= text_field_tag :callerName, caller_name  %>

      How did you find out about the hotline?
      <script type="text/javascript">
      function showfield2(name){
        if(name=='other2')document.getElementById('div2').innerHTML='Other method: <input type="text" name="altOther2" />';
        else document.getElementById('div2').innerHTML='';
      }
      </script>

      <select name="method" id="method" onchange="showfield2(this.options[this.selectedIndex].value)">
      <option value="Flyer">Flyer</option>
      <option value="Hauler">Hauler</option>
      <option value="Internet">Internet</option>
      <option value="Municipality">Municipality</option>
      <option value="Recycling Center">Recycling Center</option>
      <option value="Verizon">Verizon</option>
      <option value="other2">Other</option>
      </select>
      <div id="div2"></div>



      Call Disposition
      <script type="text/javascript">
      function showfield3(name){
        if(name=='other3')document.getElementById('div3').innerHTML='Referred to Other: <input type="text" name="altOther3" />';
        else if(name=='directly')document.getElementById('div3').innerHTML='Answered Directly: <input type="text" name="directly" />';
        else document.getElementById('div3').innerHTML='';
      }
      </script>

      <select name="disposition" id="disposition" onchange="showfield3(this.options[this.selectedIndex].value)">
      <option value="Referred to Verizon">Referred to Verizon</option>
      <option value="Referred to County Coordinator">Referred to County Coordinator</option>
      <option value="Referred to CDRA Manufacturer">Referred to CDRA Manufacturer</option>
      <option value="Referred to DEP">Referred to DEP</option>
      <option value="directly">Answered Directly</option>
      <option value="other3">Referred to Other</option>
      </select>
      <div id="div3"></div>


      Call Type
      <script type="text/javascript">
      function showfield(name){
        if(name=='Other')document.getElementById('div1').innerHTML='Other type: <input type="text" name="altOther" />';
        else document.getElementById('div1').innerHTML='';
      }
      </script>

      <select name="callType" id="callType" onchange="showfield(this.options[this.selectedIndex].value)">
      <option value="Where to recycle">Where to recycle?</option>
      <option value="How to recycle">How to recycle?</option>
      <option value="Why can't I recycle?">Why can't I recycle?</option>
      <option value="Verizon Inquiry">Verizon Inquiry</option>
      <option value="Other">Other</option>
      </select>
      <div id="div1"></div>

      Call for <br>
      <%= radio_button_tag(:callFor, "PRC", required: true) %>
      <%= label_tag(:callFor_prc, "PRC") %>

      <%= radio_button_tag(:callFor, "DEP") %>
      <%= label_tag(:callFor_dep, "DEP") %>
      <br>

      <%= submit_tag "Submit", name: 'submit_clicked', class: "button" %>
      <%= submit_tag "Save", class: "button" %>
      <%= button_to 'Reset', clear_form_path, method: :post, class: "button" %>

      <% end %>
